<interface>
    <template class="ErrorTile" parent="GtkBox">
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>

        <child>
            <object class="GtkBox" id="title-bar">
                <property name="valign">center</property>
                <property name="name">title-bar</property>
                <child>
                    <object class="GtkBox">
                        <property name="valign">center</property>
                        <child>
                            <object class="GtkLabel" id="app-name">
                                <property name="name">title</property>
                                <property name="xalign">0</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="GtkBox" id="content-holder">
                <property name="name">content-holder</property>
                <property name="orientation">vertical</property>
                <property name="spacing">5</property>
                <property name="valign">center</property>

                <child>
                    <object class="GtkLabel" id="content-title">
                        <property name="name">content-title</property>
                        <property name="xalign">0</property>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="content-body">
                        <property name="name">content-body</property>
                        <property name="wrap-mode">word</property>
                        <property name="xalign">0</property>
                    </object>
                </child>

            </object>
        </child>
    </template>
</interface>
